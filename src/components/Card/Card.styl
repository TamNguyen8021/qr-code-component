.card
  display: flex;
  max-width: 320px;
  padding: 16px 16px 40px;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: white;
  border-radius: 20px;
  text-align: center;
  box-shadow: 0 25px 25px 0 rgba(black, 0.0477);

  &-image
    max-width: 288px;
    max-height: 288px;
    border-radius: 10px;

  &-title
    margin: 24px 0 16px
    font-size: 22px;
    font-weight: 700;
    color: #1F314F;

  &-content
    font-size: 15px;
    color: #7D889E;
